<%-layout("layouts/boilerplate")%>
<body>
    <form method="post" action="/listings/<%=listing._id%>?_method=PATCH" enctype="multipart/form-data">
        <div class="row">
            <div class="col-8 offset-2">
                <h2>Edit your Information</h2>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" class="form-control" value="<%=listing.title%>" placeholder="Enter Title" >
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" placeholder="Enter Description"><%=listing.description%></textarea>
                </div>

                <div class="mb-3">
                    <p>Original Listing Image</p>
                    <img src="<%=originalImageUrl%>" >
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input name="listing[image]" type="file" class="form-control" >
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" class="form-control" value="<%=listing.price%>" placeholder="Enter Price">
                    </div>
                    
                    <div class="mb-3 col-md-6">
                        <label for="category" class="form-label">Category</label>             
                        <div>
                            <select id="category" class="category-dropdown col-8" name="listing[category]" value="<%=listing.category%>">
                                <option value="Others">Others</option>
                                <option value="Rooms">Rooms</option>
                                <option value="Iconic Cities">Iconic Cities</option>
                                <option value="Mountains">Mountains</option>
                                <option value="Castles">Castles</option>
                                <option value="Amazing Pools">Amazing Pools</option>
                                <option value="Camping">Camping</option>
                                <option value="Farms">Farms</option>
                                <option value="Arctic">Arctic</option>
                                <option value="Boats">Boats</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label for="location" class="form-label">Location</label>
                        <input name="listing[location]" class="form-control" value="<%=listing.location%>" placeholder="Enter Location">
                    </div>

                    <div class="mb-3 col-md-6">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" class="form-control" value="<%=listing.country%>" placeholder="Enter Country">
                    </div>
                </div>

                <button class="btn edit-btn mt-3">Edit</button>
                <br><br>
            </div>
        </div>
    </form>
</body>
</html>